#faq.modal.hide.fade{:role => "dialog", :tabindex => "-1"}
  .modal-header
    %h1 Orr maps
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", :href => "#faqs"} 
          %i.icon-white.icon-question-sign
          = t("secondary.faq")
      %li
        %a{"data-toggle" => "tab", :href => "#donate"} 
          %i.icon-white.icon-heart
          = t("faq.donate")
  .modal-body
    .tabbable
      .tab-content
        #faqs.tab-pane.active
          .header= t("faq.header")
          %ul#questions
            %li.open
              %a.question{:href => "#"}= t("faq.questions.what")
              .answer= t("faq.questions.what_answer_html", :ore => link_to("Orichalcum ore", "http://wiki.guildwars2.com/wiki/Orichalcum_Ore"), :wood => link_to("Ancient wood", "http://wiki.guildwars2.com/wiki/Ancient_Wood"))
            %li
              %a.question{:href => "#"}= t("faq.questions.how")
              .answer= t("faq.questions.how_answer")
            %li
              %a.question{:href => "#"}= t("faq.questions.server_map")
              .answer= t("faq.questions.server_map_answer_html")
            %li
              %a.question{:href => "#"}= t("faq.questions.who")
              .answer= t("faq.questions.who_answer_html", :pete => link_to("Pete", "http://twitter.com/brousalis"), :website => link_to("here", "http://www.brousalis.com"), :pick => link_to("David Pick", "http://twitter.com/davidpick"), :email => link_to("email", "mailto:brousapg@gmail.com"))
        #donate.tab-pane
          .wrap
            %h1= t("donate.header")
            %p= t("donate.body_html")
            %p{:style => "padding:0px 15px;"}= t("donate.thanks")
            %p{:style => "padding:0px 15px;"}  
              %strong brous
            %p
              %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post"}
                %input{:name => "cmd", :type => "hidden", :value => "_s-xclick"}
                  %input{:name => "encrypted", :type => "hidden", :value => "-----BEGIN PKCS7----------END PKCS7-----\r\n"}
                    %input{:alt => "PayPal - The safer, easier way to pay online!", :border => "0", :name => "submit", :src => "https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif", :type => "image"}
                      %img{:alt => "", :border => "0", :height => "1", :src => "https://www.paypalobjects.com/en_US/i/scr/pixel.gif", :width => "1"}

  .modal-footer
    .meter
      .cost= t("donate.monthly_cost")
      .progress
        %span $35
        .bar{:style => "width:35%"}
          %span $10
      .heart
        %a{:href => "#donate", "data-toggle" => "tab"}
          %i.icon.icon-white.icon-heart
    %a.email{:href => "mailto:orrmaps@gmail.com"}
      %i.icon-white.icon-envelope 
      = t("sign_in.email_me")
