#pageslide
  #modal
    %h2 
      Top rated
      %a.close{:href => "#"} Ã—
    .meta
      %span for #{session[:server]}
      %span 
        on
        %strong= Date.today.strftime("%b %e")
    %ul.top
      - if @rated.count == 0
        %li{:style => "padding: 3px 8px"}
          No liked maps yet!
      - @rated.each do |map|
        %li
          %a{:href => "/maps/#{map[:map].id}"}
            .map
              %i.icon.icon-white.icon-user
              = map[:map].user.name.slice(0,16)
            .likes 
              #{map[:count]}
              - if current_user
                %i.icon.icon-white.icon-thumbs-up{:class => ("liked" if current_user.already_likes?(map[:map]))}
            .clearfix


