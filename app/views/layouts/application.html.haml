!!!
%html
  %head
    = metamagic :title => "Orr Maps", :description => "Create, share, and rate orichalcum and ancient wood maps for Guild Wars 2 by server", :keywords => %w(orichalcum ancient wood ori orr orrmaps orrmap orr maps gw2)
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "http://use.typekit.com/pgq1wgn.js"
    :javascript
      try{Typekit.load();}catch(e){}
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)
  %body
    = render 'layouts/navigation'
    = yield
    = render 'layouts/sign_in' unless current_user
    = render 'layouts/servers'
    = render 'layouts/rated'
    = render 'layouts/faq'

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-35553466-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    :javascript
      google_ad_client = "ca-pub-8553243631007251";
      google_ad_slot = "0977153374";
      google_ad_width = 234;
      google_ad_height = 60;

    = javascript_include_tag "http://pagead2.googlesyndication.com/pagead/show_ads.js"
