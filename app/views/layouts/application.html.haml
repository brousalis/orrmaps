!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Orr Maps"
    %meta{:content => content_for?(:description) ? yield(:description) : "Orr maps", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "http://use.typekit.com/pgq1wgn.js"
    :javascript
      try{Typekit.load();}catch(e){}
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)
  %body
    = render 'layouts/navigation'
    = yield
    = render 'layouts/sign_in' unless current_user
    = render 'layouts/servers'
    = render 'layouts/rated'

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-35553466-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
